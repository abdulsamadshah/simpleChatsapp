<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.simplechatsappsamad">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/appimages"
        android:label="@string/app_name"
        android:roundIcon="@drawable/appimages"
        android:supportsRtl="true"
        android:theme="@style/Theme.SimpleChatsapp"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Activity.ChatActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.SetupProfileActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.OtpActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.MainActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.PhoneNumberActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>